<h1 align="center">
	<%= @category.name %> Articles
</h1>
<% @articles.each do |article| %>
	<p>
		<%= image_tag article.image %>
	</p>
	<h3>
		<%= article.title %>
	</h3>
	<p>
		<%= article.text %>
	</p>
	<p>
		<%= article.author.name %>
	</p>
	<span>
		<%= vote_or_unvote_btn(article) %>
	</span>
<% end %>
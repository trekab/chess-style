<div class="row">
  <div class="col-md-6 mx-auto">
    <h3>Edit Category</h3>
    <%= form_for(@category) do |f| %>
      <div class = "form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, placeholder: "Enter name of Category", class: 'form-control', required: true %>
      </div>
      <div class = "form-group">
        <%= f.label :priority, "Priority(between 1 and 5)" %>
        <%= f.number_field :priority, rows: 10, placeholder: "Enter priority of category", class: 'form-control', min: 1, max: 5, required: true %>
      </div>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
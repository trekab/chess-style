<!DOCTYPE html>
<html>
  <head>
    <title>RorCapstone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">TheChessBoard</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto ml-auto">
          <li class="nav-item">
            <%= link_to 'Home', root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Write an Article', create_article_path, class: "nav-link" %>
          </li>
        </ul>
        <div>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <% if logged_in? %>
                <%= link_to 'LOGOUT', logout_path, class: "nav-link", method: :delete %>
              <% else %>
                <%= link_to 'LOGIN', login_path, class: "nav-link" %>
              <% end %>
            </li>
            <li class="nav-item">
              <% if !logged_in? %>
                <%= link_to 'REGISTER', sign_up_path, class: "nav-link" %>
              <% end %>
            </li>       
          </ul>
        </div>
        
      </div>
    </nav>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %> 
       
      <%= yield %>
    </div>
    <footer class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">TheChessBoard</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto ml-auto">
          <li class="nav-item">
            <a href="#" class="nav-link">Privacy Policy</a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link">Terms & Conditions</a>
          </li>
        </ul>
        <div>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a href="#" class="nav-link">Connect with us: </a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">
                <%= fa_stacked_icon "twitter", base: "square-o" %>
              </a>
            </li>  
            <li class="nav-item">
              <a href="#" class="nav-link">
                <%= fa_stacked_icon "instagram", base: "square-o" %>
              </a>
            </li>    
            <li class="nav-item">
              <a href="#" class="nav-link">
                <%= fa_stacked_icon "facebook", base: "square-o" %>
              </a>
            </li>    
          </ul>
        </div>
        
      </div>
    </footer>
      
  </body>
</html>

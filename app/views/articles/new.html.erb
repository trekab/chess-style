<h3>Create New Article</h3>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, url: create_article_path ) do |f| %>

      <%= render 'shared/error_messages' %>
      
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>  
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :text %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :text, rows: 10, class: "form-control", placeholder: "Description of article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :image %>
        </div>
        <div class="col-sm-8">
          <%= f.file_field :image, rows: 10, class: "form-control", placeholder: "Upload Image", required: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text } %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<h1>Home Page</h1>
<h2>Featured Article</h2>
<p>
	<%= @featured_article.title %>
</p>
<em>
	<%= image_tag @featured_article.image %>
</em>
<span>
	<%= vote_or_unvote_btn(@featured_article) %>
</span>
<hr>
<% @categories.each do |category| %>
	<h3>
		<%= link_to category.name, category_path(category) %>
	</h3>
	<p>
		<%= category.articles.last.title %>
	</p>
	<em>
		<%= image_tag category.articles.last.image %>
	</em>
	<span>
		<%= vote_or_unvote_btn(category.articles.last) %>
	</span>
<% end %>